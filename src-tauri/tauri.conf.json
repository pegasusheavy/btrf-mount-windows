{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "BTRFS Mount Windows",
  "version": "0.1.0",
  "identifier": "com.pegasusheavyindustries.btrfs-mount-windows",
  "build": {
    "devUrl": "http://localhost:4200",
    "beforeDevCommand": "pnpm start",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist/btrfs-mount-gui/browser"
  },
  "app": {
    "windows": [
      {
        "title": "BTRFS Mount Windows",
        "width": 1024,
        "height": 768,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/pegasusheavy/btrf-mount-windows/releases/latest/download/latest.json"
      ],
      "pubkey": ""
    }
  }
}
